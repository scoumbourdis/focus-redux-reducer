{
  "name": "focus-redux-reducer",
  "version": "2.0.0",
  "description": "A Redux reducer focused on productivity.",
  "readme": "./README.md",
  "main": "dist/index.js",
  "scripts": {
    "build": "rm -rf ./dist && tsc",
    "lint": "eslint ./src",
    "commit": "git-cz",
    "test": "npm run lint && cross-env NODE_ENV=test nyc mocha --bail --recursive -R spec --compilers ts:ts-node/register,js:ts-node/register",
    "test:watch": "mocha -R spec --compilers js:ts-node/register,ts:ts-node/register -w",
    "check-coverage": "nyc check-coverage --statements 100 --branches 87 --functions 100 --lines 100",
    "semantic-release": "semantic-release pre && npm run build && npm publish && semantic-release post",
    "install": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tavantzo/focus-redux-reducer.git"
  },
  "keywords": [
    "reducer",
    "redux",
    "react",
    "react-native"
  ],
  "files": [
    "dist",
    "README.md "
  ],
  "author": "George Tavantzopoulos <g.tavantzopoulos@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/tavantzo/focus-redux-reducer/issues"
  },
  "homepage": "https://github.com/tavantzo/focus-redux-reducer#readme",
  "dependencies": {
    "redux": "^4.0.0"
  },
  "devDependencies": {
    "@types/react": "^16.3.14",
    "@types/redux": "^3.6.0",
    "awesome-typescript-loader": "^5.0.0",
    "chai": "3.5.0",
    "codecov.io": "0.1.6",
    "commitizen": "2.9.6",
    "cross-env": "4.0.0",
    "cz-conventional-changelog": "2.0.0",
    "eslint": "^4.19.1",
    "ghooks": "2.0.0",
    "json-loader": "0.5.4",
    "mocha": "3.3.0",
    "nyc": "10.3.0",
    "react": "^15.6.1",
    "react-redux": "^5.0.6",
    "semantic-release": "^8.0.4",
    "source-map-loader": "^0.2.3",
    "ts-node": "^6.0.3",
    "typescript": "^2.8.3",
    "typescript-eslint-parser": "^15.0.0",
    "webpack": "2.4.1"
  },
  "config": {
    "ghooks": {
      "pre-commit": "npm test && npm run check-coverage"
    },
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    }
  },
  "nyc": {
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "lcov",
      "text"
    ],
    "sourceMap": true,
    "instrument": true,
    "extension": [ ".ts" ],
    "include": [ "src/*.ts" ],
    "all": true
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended"
    ],
    "parser": "typescript-eslint-parser",
    "parserOptions": {
      "ecmaVersion": 2017,
      "sourceType": "module"
    },
    "env": {
      "es6": true
    }
  },
  "directories": {
    "test": "test"
  }
}
